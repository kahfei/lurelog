<!DOCTYPE html>
<html>
<head>
  <title>Lurelog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
 <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
 <% end %>
 <% if flash[:error] %>
      <p class="error"><%= flash[:error] %></p>
 <% end %>
  <% if flash[:alert] %>
      <p class="alert"><%= flash[:alert] %></p>
 <% end %>
<%= yield %>

</body>
</html>
